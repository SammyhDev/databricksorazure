{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "appName": {
      "type": "string",
      "defaultValue": "[concat('azure-databricks-advisor-', uniqueString(resourceGroup().id))]",
      "metadata": {
        "description": "Name of the web app (must be globally unique)"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources"
      }
    },
    "openaiApiKey": {
      "type": "securestring",
      "defaultValue": "",
      "metadata": {
        "description": "Your OpenAI API Key (get it from https://platform.openai.com/api-keys). Required if NOT using Azure OpenAI."
      }
    },
    "openaiModel": {
      "type": "string",
      "defaultValue": "gpt-4-turbo-preview",
      "allowedValues": [
        "gpt-4o",
        "gpt-4o-mini",
        "gpt-4-turbo",
        "gpt-4-turbo-preview",
        "gpt-4.1",
        "gpt-4",
        "gpt-3.5-turbo",
        "o1-preview",
        "o1-mini",
        "custom"
      ],
      "metadata": {
        "description": "OpenAI model to use (select 'custom' to manually specify a model name in customModelName parameter)"
      }
    },
    "customModelName": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Custom model name (only used if openaiModel is set to 'custom'). Example: gpt-4.1, gpt-4o-2024-05-13"
      }
    },
    "useAzureOpenAI": {
      "type": "bool",
      "defaultValue": false,
      "metadata": {
        "description": "Set to TRUE if using Azure OpenAI Service. Set to FALSE if using standard OpenAI API."
      }
    },
    "azureOpenAIEndpoint": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "[REQUIRED IF useAzureOpenAI=true] Azure OpenAI endpoint without /openai/deployments path. Example: https://your-resource.openai.azure.com"
      }
    },
    "azureOpenAIKey": {
      "type": "securestring",
      "defaultValue": "",
      "metadata": {
        "description": "[REQUIRED IF useAzureOpenAI=true] Your Azure OpenAI API key from Azure Portal"
      }
    },
    "azureOpenAIDeployment": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "[REQUIRED IF useAzureOpenAI=true] Azure OpenAI deployment name. Example: gpt-4.1, gpt-35-turbo"
      }
    },
    "azureOpenAIApiVersion": {
      "type": "string",
      "defaultValue": "2024-08-01-preview",
      "metadata": {
        "description": "[OPTIONAL] Azure OpenAI API version. Common: 2024-08-01-preview, 2025-01-01-preview, 2023-05-15. Only used if useAzureOpenAI is true."
      }
    },
    "sku": {
      "type": "string",
      "defaultValue": "B1",
      "allowedValues": [
        "F1",
        "B1",
        "B2",
        "S1",
        "S2",
        "P1V2",
        "P2V2"
      ],
      "metadata": {
        "description": "App Service Plan pricing tier (F1=Free, B1=Basic, S1=Standard)"
      }
    },
    "repoUrl": {
      "type": "string",
      "defaultValue": "https://github.com/SammyhDev/databricksorazure.git",
      "metadata": {
        "description": "GitHub repository URL"
      }
    },
    "branch": {
      "type": "string",
      "defaultValue": "main",
      "metadata": {
        "description": "GitHub branch to deploy"
      }
    }
  },
  "variables": {
    "appServicePlanName": "[concat(parameters('appName'), '-plan')]",
    "webAppName": "[parameters('appName')]",
    "actualModelName": "[if(equals(parameters('openaiModel'), 'custom'), parameters('customModelName'), parameters('openaiModel'))]"
  },
  "resources": [
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2022-03-01",
      "name": "[variables('appServicePlanName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "[parameters('sku')]"
      },
      "kind": "linux",
      "properties": {
        "reserved": true
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2022-03-01",
      "name": "[variables('webAppName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', variables('appServicePlanName'))]"
      ],
      "kind": "app,linux",
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('appServicePlanName'))]",
        "siteConfig": {
          "linuxFxVersion": "NODE|18-lts",
          "appCommandLine": "npm start",
          "appSettings": [
            {
              "name": "OPENAI_API_KEY",
              "value": "[parameters('openaiApiKey')]"
            },
            {
              "name": "OPENAI_MODEL",
              "value": "[variables('actualModelName')]"
            },
            {
              "name": "AZURE_OPENAI_ENDPOINT",
              "value": "[if(parameters('useAzureOpenAI'), parameters('azureOpenAIEndpoint'), '')]"
            },
            {
              "name": "AZURE_OPENAI_KEY",
              "value": "[if(parameters('useAzureOpenAI'), parameters('azureOpenAIKey'), '')]"
            },
            {
              "name": "AZURE_OPENAI_DEPLOYMENT",
              "value": "[if(parameters('useAzureOpenAI'), parameters('azureOpenAIDeployment'), '')]"
            },
            {
              "name": "AZURE_OPENAI_API_VERSION",
              "value": "[if(parameters('useAzureOpenAI'), parameters('azureOpenAIApiVersion'), '')]"
            },
            {
              "name": "PORT",
              "value": "8080"
            },
            {
              "name": "SCM_DO_BUILD_DURING_DEPLOYMENT",
              "value": "true"
            },
            {
              "name": "WEBSITE_NODE_DEFAULT_VERSION",
              "value": "18-lts"
            }
          ]
        },
        "httpsOnly": true
      },
      "resources": [
        {
          "type": "sourcecontrols",
          "apiVersion": "2022-03-01",
          "name": "web",
          "dependsOn": [
            "[resourceId('Microsoft.Web/sites', variables('webAppName'))]"
          ],
          "properties": {
            "repoUrl": "[parameters('repoUrl')]",
            "branch": "[parameters('branch')]",
            "isManualIntegration": true
          }
        }
      ]
    }
  ],
  "outputs": {
    "webAppUrl": {
      "type": "string",
      "value": "[concat('https://', reference(resourceId('Microsoft.Web/sites', variables('webAppName'))).defaultHostName)]"
    },
    "webAppName": {
      "type": "string",
      "value": "[variables('webAppName')]"
    }
  }
}
