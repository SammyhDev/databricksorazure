{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "containerAppName": {
      "type": "string",
      "defaultValue": "[concat('azure-databricks-advisor-', uniqueString(resourceGroup().id))]",
      "metadata": {
        "description": "Name of the container app"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources"
      }
    },
    "openaiApiKey": {
      "type": "securestring",
      "defaultValue": "not-required-if-using-azure-openai",
      "metadata": {
        "description": "Your OpenAI API Key (get it from https://platform.openai.com/api-keys). Leave default value if using Azure OpenAI."
      }
    },
    "openaiModel": {
      "type": "string",
      "defaultValue": "gpt-4-turbo-preview",
      "allowedValues": [
        "gpt-4o",
        "gpt-4o-mini",
        "gpt-4-turbo",
        "gpt-4-turbo-preview",
        "gpt-4.1",
        "gpt-4",
        "gpt-3.5-turbo",
        "o1-preview",
        "o1-mini",
        "custom"
      ],
      "metadata": {
        "description": "OpenAI model to use (select 'custom' to manually specify a model name in customModelName parameter)"
      }
    },
    "customModelName": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Custom model name (only used if openaiModel is set to 'custom'). Example: gpt-4.1, gpt-4o-2024-05-13"
      }
    },
    "useAzureOpenAI": {
      "type": "bool",
      "defaultValue": false,
      "metadata": {
        "description": "Set to TRUE if using Azure OpenAI Service. Set to FALSE if using standard OpenAI API."
      }
    },
    "azureOpenAIEndpoint": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "[REQUIRED IF useAzureOpenAI=true] Azure OpenAI endpoint without /openai/deployments path. Example: https://your-resource.openai.azure.com"
      }
    },
    "azureOpenAIKey": {
      "type": "securestring",
      "defaultValue": "",
      "metadata": {
        "description": "[REQUIRED IF useAzureOpenAI=true] Your Azure OpenAI API key from Azure Portal"
      }
    },
    "azureOpenAIDeployment": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "[REQUIRED IF useAzureOpenAI=true] Azure OpenAI deployment name. Example: gpt-4.1, gpt-35-turbo"
      }
    },
    "azureOpenAIApiVersion": {
      "type": "string",
      "defaultValue": "2024-08-01-preview",
      "metadata": {
        "description": "[OPTIONAL] Azure OpenAI API version. Common: 2024-08-01-preview, 2025-01-01-preview, 2023-05-15. Only used if useAzureOpenAI is true."
      }
    },
    "containerImage": {
      "type": "string",
      "defaultValue": "sammyhdev/azure-databricks-advisor:latest",
      "metadata": {
        "description": "Container image to deploy (will use GitHub Actions to build)"
      }
    }
  },
  "variables": {
    "containerAppEnvName": "[concat(parameters('containerAppName'), '-env')]",
    "logAnalyticsWorkspaceName": "[concat(parameters('containerAppName'), '-logs')]",
    "actualModelName": "[if(equals(parameters('openaiModel'), 'custom'), parameters('customModelName'), parameters('openaiModel'))]"
  },
  "resources": [
    {
      "type": "Microsoft.OperationalInsights/workspaces",
      "apiVersion": "2022-10-01",
      "name": "[variables('logAnalyticsWorkspaceName')]",
      "location": "[parameters('location')]",
      "properties": {
        "sku": {
          "name": "PerGB2018"
        },
        "retentionInDays": 30
      }
    },
    {
      "type": "Microsoft.App/managedEnvironments",
      "apiVersion": "2023-05-01",
      "name": "[variables('containerAppEnvName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.OperationalInsights/workspaces', variables('logAnalyticsWorkspaceName'))]"
      ],
      "properties": {
        "appLogsConfiguration": {
          "destination": "log-analytics",
          "logAnalyticsConfiguration": {
            "customerId": "[reference(resourceId('Microsoft.OperationalInsights/workspaces', variables('logAnalyticsWorkspaceName')), '2022-10-01').customerId]",
            "sharedKey": "[listKeys(resourceId('Microsoft.OperationalInsights/workspaces', variables('logAnalyticsWorkspaceName')), '2022-10-01').primarySharedKey]"
          }
        }
      }
    },
    {
      "type": "Microsoft.App/containerApps",
      "apiVersion": "2023-05-01",
      "name": "[parameters('containerAppName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.App/managedEnvironments', variables('containerAppEnvName'))]"
      ],
      "properties": {
        "managedEnvironmentId": "[resourceId('Microsoft.App/managedEnvironments', variables('containerAppEnvName'))]",
        "configuration": {
          "ingress": {
            "external": true,
            "targetPort": 8080,
            "allowInsecure": false,
            "traffic": [
              {
                "latestRevision": true,
                "weight": 100
              }
            ]
          },
          "secrets": [
            {
              "name": "openai-api-key",
              "value": "[parameters('openaiApiKey')]"
            },
            {
              "name": "azure-openai-key",
              "value": "[if(parameters('useAzureOpenAI'), parameters('azureOpenAIKey'), '')]"
            }
          ]
        },
        "template": {
          "containers": [
            {
              "name": "azure-databricks-advisor",
              "image": "[parameters('containerImage')]",
              "resources": {
                "cpu": 0.5,
                "memory": "1Gi"
              },
              "env": [
                {
                  "name": "OPENAI_API_KEY",
                  "secretRef": "openai-api-key"
                },
                {
                  "name": "OPENAI_MODEL",
                  "value": "[variables('actualModelName')]"
                },
                {
                  "name": "AZURE_OPENAI_ENDPOINT",
                  "value": "[if(parameters('useAzureOpenAI'), parameters('azureOpenAIEndpoint'), '')]"
                },
                {
                  "name": "AZURE_OPENAI_KEY",
                  "secretRef": "azure-openai-key"
                },
                {
                  "name": "AZURE_OPENAI_DEPLOYMENT",
                  "value": "[if(parameters('useAzureOpenAI'), parameters('azureOpenAIDeployment'), '')]"
                },
                {
                  "name": "AZURE_OPENAI_API_VERSION",
                  "value": "[if(parameters('useAzureOpenAI'), parameters('azureOpenAIApiVersion'), '')]"
                },
                {
                  "name": "PORT",
                  "value": "8080"
                }
              ]
            }
          ],
          "scale": {
            "minReplicas": 1,
            "maxReplicas": 3,
            "rules": [
              {
                "name": "http-scaling",
                "http": {
                  "metadata": {
                    "concurrentRequests": "10"
                  }
                }
              }
            ]
          }
        }
      }
    }
  ],
  "outputs": {
    "containerAppUrl": {
      "type": "string",
      "value": "[concat('https://', reference(resourceId('Microsoft.App/containerApps', parameters('containerAppName'))).configuration.ingress.fqdn)]"
    },
    "containerAppName": {
      "type": "string",
      "value": "[parameters('containerAppName')]"
    }
  }
}
